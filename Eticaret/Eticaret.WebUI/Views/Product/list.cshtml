@model Eticaret.WebUI.Models.ProductListViewModel
@{
    var populerUrun = Model.Products.Count > 2 ? "populer" : "";
    var productsM = Model.Products;
}

@section Categories
{
    @await Component.InvokeAsync("Categories")
}


@if (productsM.Count == 0)
{
    @await Html.PartialAsync("_noproduct")
}
else
{
    <div class="row">
        @foreach (var product in productsM)
        {
            <div class="col-md-4">
                @await Html.PartialAsync("_product", product)
            </div>
        }

    </div>
}
